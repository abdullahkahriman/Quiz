@section Scripts {
    <script src="~/admin/js/angularjs/SystemActionCtrl.js"></script>
}

<table class="table table-hover table-bordered" ng-controller="SystemActionListCtrl">
    <thead>
        <tr>
            <th>Controler Name</th>
            <th>Action Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody ng-show="wait">
        <tr class="text-center">
            <td colspan="5">Please wait...</td>
        </tr>
    </tbody>
    <tbody ng-show="!wait && systemActionList.length == 0">
        <tr class="text-center">
            <td colspan="5">Not found</td>
        </tr>
    </tbody>
    <tbody ng-show="!wait">
        <tr ng-repeat="systemAction in systemActionList">
            <td>{{ systemAction.controllerName }}</td>
            <td>{{ systemAction.actionName }}</td>
            <td>{{ systemAction.createdAt | date }}</td>
            <td>{{ systemAction.updatedAt | date }}</td>
            <td class="text-center">
                <a href="create/{{ systemAction.id }}">
                    <i title="Edit" class="fas fa-pencil-alt"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>