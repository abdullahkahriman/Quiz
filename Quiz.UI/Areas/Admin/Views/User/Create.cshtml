@{
    long id = (long)ViewBag.ID;
}

@section Scripts {
    <script>
        const id = @(id);
    </script>
    <script src="~/admin/js/angularjs/UserCtrl.js"></script>
}

<div ng-controller="UserCreateCtrl">
    <form ng-submit="save()" ng-hide="wait">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" autofocus class="form-control" ng-model="user.username"
                   placeholder="Username" />
        </div>
        <div class="form-group">
            <label for="pass">Password:</label>
            <input type="password" id="pass" autofocus class="form-control" ng-model="user.password"
                   placeholder="Password (Fill in to update)" />
        </div>
        <div class="form-group">
            <label class="d-block">Roles:</label>
            <div style="overflow: hidden; width: calc(100% / 4); float: left;"
                 class="form-check"
                 ng-repeat="role in user.roles">
                <label class="form-check-labelform-check" style="cursor: pointer;">
                    <input type="checkbox" autofocus class="form-check-input" value="{{role.id}}" ng-model="role.checked"  /> {{ role.name }}
                </label>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

