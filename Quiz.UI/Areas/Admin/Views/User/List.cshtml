@section Scripts {
    <script src="~/admin/js/angularjs/UserCtrl.js"></script>
}

<style>
    td a {
        margin: 0 10px;
    }
</style>

<table class="table table-hover table-bordered" ng-controller="UserListCtrl">
    <thead>
        <tr>
            <th>Username</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody ng-show="wait">
        <tr class="text-center">
            <td colspan="4">Please wait...</td>
        </tr>
    </tbody>
    <tbody ng-show="!wait && userList.length == 0">
        <tr class="text-center">
            <td colspan="4">Not found</td>
        </tr>
    </tbody>
    <tbody ng-show="!wait">
        <tr ng-repeat="user in userList">
            <td>{{ user.username }}</td>
            <td>{{ user.createdAt | date }}</td>
            <td>{{ user.updatedAt | date }}</td>
            <td class="justify-content-center d-flex">
                <a title="Edit" href="create/{{ user.id }}">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a title="Delete" href="" ng-click="delete(user.id)">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>