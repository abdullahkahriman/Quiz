<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
            font-size: 1.5em;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

@section Scripts {
    <script src="~/js/angularjs/ctrl/AccountCtrl.js"></script>
}

<div class="login-form" ng-controller="AccountSignInCtrl">
    <form ng-submit="SignIn()" method="post">
        <h2 class="text-center">Login and manage site...</h2>
        <div class="form-group">
            <input type="text" autofocus ng-model="model.username" class="form-control" placeholder="Username" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" ng-model="model.password" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" ng-disabled="loading" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
            <a href="#" class="float-right">Forgot Password?</a>
        </div>
    </form>
</div>