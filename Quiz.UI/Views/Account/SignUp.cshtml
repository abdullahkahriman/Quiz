@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}

<div class="form-container sign-up-container" ng-controller="AccountSignUpCtrl">
    <form ng-submit="SignUp()">
        <h1>Create Account</h1>
        <div class="social-container">
        </div>
        @*<span>or use your email for registration</span>*@
        <input type="text" ng-model="model.username" autofocus placeholder="User Name" />
        <input type="password" ng-model="model.password" placeholder="Password" />
        <input type="password" ng-model="model.repassword" placeholder="Re Password" />
        <button type="submit" ng-disabled="loading" name="SignUp">Sign Up</button>
    </form>
</div>